@model User
@{ Layout = "_Layout"; ViewBag.Title = "Update a User from PATCH request";}

<h2>Update a User from Patch request<a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="name.first"></label>
        <input class="form-control" asp-for="name.first" />
    </div>
    <div class="form-group">
        <label asp-for="name.last"></label>
        <input class="form-control" asp-for="name.last" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>